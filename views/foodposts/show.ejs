<%- include('../partials/header') %>

<section id="show-page">
  <div>Posted by: </div>
  <div><img src="<%= foodpost.userAvatar %>" alt="User Avatar"><%= foodpost.userName %></div>
  <div>What's posted:</div>
  <div><%= foodpost.description %></div>
  <div>Image:</div>
  <div><img src="<%= foodpost.imageURL %>" alt="Food Image"></div>

  <h2>User Reviews</h2>
  <form id="add-review-form" method="POST" action="/foodposts/<%= foodpost._id %>/reviews">
    <label>Review:</label>
    <textarea name="content"></textarea>
    <input type="submit" value="Add Review">
  </form>

  <% if (foodpost.reviews && foodpost.reviews.length) { %>
    <table>
      <thead>
        <tr>
          <th>User</th>
          <th>Content</th>
          <th>Rating</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% let total = 0 %>
        <% foodpost.reviews.forEach(function(r) { %>
          <% total += r.rating %>
          <tr>
            <td class="review-user"><img alt="avatar" src="<%= r.userAvatar %>" referrerpolicy="no-referrer" ><%= r.userName %></td>
            <td><%= r.content %></td>
            <td><%= r.rating %></td>
            <td>
              <% if (user?._id.equals(r.user)) { %>
                <form action="/reviews/<%= r._id %>?_method=DELETE" method="POST">
                  <button type="submit">‚ê°</button>
                </form>
              <% } %>
            </td>
          </tr>
        <% }); %>
        <tr>
          <td colspan="3"></td>
          <td><strong><%= (total / foodpost.reviews.length).toFixed(1) %></strong></td>
        </tr>
      </tbody>
    </table>
  <% } else { %>
    <h5>No Reviews Yet</h5>
  <% } %>
</section>

<%- include('../partials/footer') %>

